<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backgrounds_02"
        tools:layout_editor_absoluteX="4dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:text="Calories to lose weight :"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:gravity="center"
        android:text="1500 calories"
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:id="@+id/scroll"
        app:layout_constraintBottom_toTopOf="@id/buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintVertical_bias="0.0"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="405dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:padding="10dp"
                android:text="Breakfast"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <Button
                android:id="@+id/addBreakfast"
                android:layout_width="411dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:text="+               Add Food               +"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />
            <com.example.hci.NonScrollListView
                android:id="@+id/linlay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.example.hci.NonScrollListView>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="405dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:padding="10dp"
                android:text="Lunch"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addBreakfast" />

            <Button
                android:id="@+id/addLunch"
                android:layout_width="411dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:text="+               Add Food               +"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />
            <com.example.hci.NonScrollListView
                android:id="@+id/linlay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.example.hci.NonScrollListView>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="405dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:padding="10dp"
                android:text="Dinner"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addLunch" />

            <Button
                android:id="@+id/addDinner"
                android:layout_width="411dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:text="+               Add Food               +"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />
            <com.example.hci.NonScrollListView
                android:id="@+id/linlay3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.example.hci.NonScrollListView>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="405dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:padding="10dp"
                android:text="Snack"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addDinner" />

            <Button
                android:id="@+id/addSnack"
                android:layout_width="411dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:text="+               Add Food               +"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView6" />
            <com.example.hci.NonScrollListView
                android:id="@+id/linlay4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.example.hci.NonScrollListView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/buttons"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/scroll"
    android:layout_marginTop="16dp"
    android:orientation="horizontal"
    >
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="5"
        android:backgroundTint="#240D40"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:text="SUBMIT"
        android:textAllCaps="false"
        android:textColor="#ECE5F8"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="5"
        android:backgroundTint="#240D40"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:text="CLEAR"
        android:textAllCaps="false"
        android:textColor="#ECE5F8"
        android:textSize="20dp"

        android:layout_marginRight="10dp"/>
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>